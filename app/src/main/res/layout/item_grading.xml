<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <!-- Student Name -->
    <TextView
        android:id="@+id/studentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp" />


    <!-- Marks - Will show "Not Assigned" or actual marks -->
    <TextView
        android:id="@+id/studentMarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Assigned"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginBottom="8dp"
        android:textAlignment="center" />

    <!-- Marks Input (Initially hidden) -->
    <LinearLayout
        android:id="@+id/marksInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Marks Input Field -->
        <EditText
            android:id="@+id/studentMarksInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter marks"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveMarksButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:padding="12dp" />
    </LinearLayout>
</LinearLayout>
